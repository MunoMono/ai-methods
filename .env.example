# Local PostgreSQL (Research Database with pgvector)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=epistemic_drift

# DDR Archive Database (Read-only access)
DDR_POSTGRES_USER=your_ddr_username
DDR_POSTGRES_PASSWORD=your_ddr_password
DDR_POSTGRES_HOST=your_ddr_droplet_ip
DDR_POSTGRES_PORT=5432
DDR_POSTGRES_DB=ddr_archive

# Granite Model Configuration
GRANITE_MODEL_PATH=ibm-granite/granite-4.0-h-small-instruct
GRANITE_DEVICE=cpu

# DigitalOcean Spaces (for archive media)
S3_BUCKET=your-spaces-bucket
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_ACCESS_KEY=your_spaces_key
S3_SECRET_KEY=your_spaces_secret

# Application
ENVIRONMENT=production
DEBUG=false
