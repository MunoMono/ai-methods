# Environment variables for Docker Compose
# Copy this to .env and fill in your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=epistemic_drift

# Granite Model
GRANITE_MODEL_PATH=ibm-granite/granite-4.0-h-small-instruct
GRANITE_DEVICE=cpu  # Change to cuda if you have GPU support

# S3 Storage (MinIO)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_secure_password
S3_BUCKET=epistemic-drift-research
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin_secure_password

# Optional: External S3 configuration
# S3_ENDPOINT=https://your-s3-endpoint.com
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
